{
  "name": "Caddy 2 (repo update!)",
  "version": "0.1.2",
  "slug": "caddy2",
  "description": "Caddy 2 web server",
  "url": "https://github.com/einschmidt/addons-caddy-2",
  "arch": [
    "armhf",
    "armv7",
    "amd64",
    "aarch64"
  ],
  "startup": "services",
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "map": [
    "share",
    "config",
    "ssl:rw"
  ],
  "host_network": true,
  "options": {
    "non_caddyfile_config": {
      "email": "your@email.com",
      "domain": "mydomain.com",
      "destination": "localhost",
      "port": 8123
    },
    "args": [],
    "env_vars": [],
    "log_level": "info"
  },
  "schema": {
    "non_caddyfile_config": {
      "email": "email?",
      "domain": "str?",
      "destination": "str?",
      "port": "port?"
    },
    "config_path": "str?",
    "custom_binary_path": "str?",
    "args": [
      "str"
    ],
    "env_vars": [
      {
        "name": "str",
        "value": "str"
      }
    ],
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  },
  "image": "berichta/caddy-2-{arch}"
}
